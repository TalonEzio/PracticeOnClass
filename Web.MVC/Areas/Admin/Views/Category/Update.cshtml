@model Web.MVC.Areas.Admin.Models.CategoryViewModel

@{
    ViewBag.Title = "Update";
}

<h2>Cập nhật danh mục</h2>


@using (Html.BeginForm())
{
    <div class="row mb-2">
        @Html.LabelFor(x => x.Name, new { @class = "col-form-label col-2" })
        <div class="col-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-2">
        @Html.LabelFor(x => x.VietnameseName, new { @class = "col-form-label col-2" })
        <div class="col-10">
            @Html.TextBoxFor(x => x.VietnameseName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.VietnameseName, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="row mb-2">
        <div class="col-3">
            <button class="btn btn-primary">Cập nhật</button>
        </div>
    </div>
}